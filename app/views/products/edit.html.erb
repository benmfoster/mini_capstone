<h1>Edit Product</h1>

<form action = "/products/<%= @product.id %>" method = "post">
	<input type = "hidden" name = "_method" value = "patch" />
	<div>
		Name: <input type = "text" name = "name" value = "<%= @product.name %>" />
	</div>

	<div>
		Secret Power: <input type = "text" name = "secret_power" value = "<%= @product.secret_power %>" />
	</div>

	<div>
		Description: <input type = "text" name = "description" value = "<%= @product.description %>" />
	</div>

	<div>
		Supplier: <input type = "text" name = "supplier_id" value = "<%= @product.supplier_id %>" />
	</div>
	<div>
		Price: <input type = "number" name = "price" value = "<%= @product.price %>" />
	</div>
	<input type = "submit" value = "Update Product" />
</form>
<a href = "/products/<%= @product.id %>" data-method = "delete" rel = "nofollow">Delete</a>